
@{
    ViewBag.Title = "Create";
}
<div class="back-link"><a href="/Country/List">Go back to list</a></div>
<h2>Create Country</h2>

<form action="/Country/Create" method="POST">
    <div>
        <label>Country Name:</label>
        <input type="text" name="CountryName" />
    </div>
    <div>
        <label>Airforce Name:</label>
        <input type="text" name="AirforceName" />
    </div>
    <div>
        <label>Country Description:</label>
        <textarea name="CountryDescription"></textarea>
    </div>
    <div class="btn">
        <input class="btn btn-primary" type="submit" value="Add Country" />

    </div>
</form>
