@model Passion_Project_Application.Models.AircraftDto
@{
    ViewBag.Title = "DeleteConfirm";
}


<div class="back-link"><a href="/Aircraft/List">Cancel</a></div>

<h2>Are you sure you want to delete this aircraft?</h2>
<p style="color:red">This action cannot be undone</p>
<h2>@Model.AircraftName</h2>
<div><span>Aircraft Type:</span> @Model.AircraftType</div>
<div><span>Engine:</span> @Model.Engine</div>
<div><span>Fun Facts:</span>@Model.Description</div>
<div><span>Manufacturer:</span> @Model.CompanyName</div>
<form action="/Aircraft/Delete/@Model.AircraftID" method="POST">
    <input style="margin:5em 0;" class="btn btn-danger" type="submit" value="Confirm Delete" />

</form>